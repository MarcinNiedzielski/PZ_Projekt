@model List<PZ_Projekt.Models.Item>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Witamy w naszym sklepie internetowym!</h1>
    <p>Zobacz nasze najnowsze produkty:</p>

    <!-- Formularz filtrowania -->
    <form asp-action="Index" asp-controller="Home" method="get" class="form-inline mb-2">
        <label class="mr-2">Sortuj według:</label>
        <select name="sortOrder" class="form-control mr-2">
            <option value="">Domyślnie</option>
            <option value="name_desc">Nazwa (Z-A)</option>
            <option value="price_asc">Cena (rosnąco)</option>
            <option value="price_desc">Cena (malejąco)</option>
        </select>
        <button type="submit" class="btn btn-primary">Sortuj</button>
    </form>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">@item.Price.ToString("C")</p>
                        <a href="@Url.Action("AddToCart", "Cart", new { id = item.Id })" class="btn btn-primary">Dodaj do koszyka</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <a href="@Url.Action("Index", "Item")" class="btn btn-primary">Przejdź do listy wszystkich produktów</a>
    <a href="@Url.Action("Index", "Cart")" class="btn btn-primary">Przejdź do koszyka</a>
</div>