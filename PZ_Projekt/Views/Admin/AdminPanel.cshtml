@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h1>Panel Administratora</h1>

<div class="card-deck">
    <!-- Wyświetlanie wszystkich zamówień -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Wszystkie Zamówienia</h5>
            <p class="card-text">Przeglądaj wszystkie zamówienia złożone przez użytkowników.</p>
            <a href="@Url.Action("AllOrders", "Order")" class="btn btn-primary">Przeglądaj Zamówienia</a>
        </div>
    </div>

    <!-- Zarządzanie użytkownikami -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Zarządzaj Użytkownikami</h5>
            <p class="card-text">Zarządzaj rolami i uprawnieniami użytkowników.</p>
            <a href="@Url.Action("ManageRoles", "Admin")" class="btn btn-primary">Zarządzaj Użytkownikami</a>
        </div>
    </div>

    <!-- Dodawanie produktów -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Dodaj Produkt</h5>
            <p class="card-text">Dodaj nowe produkty do sklepu.</p>
            <a href="@Url.Action("Create", "Item")" class="btn btn-primary">Dodaj Produkt</a>
        </div>
    </div>

    <!-- Lista wszystkich produktów -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Wszystkie Produkty</h5>
            <p class="card-text">Przeglądaj wszystkie produkty w sklepie.</p>
            <a href="@Url.Action("Index", "Item")" class="btn btn-primary">Przeglądaj Produkty</a>
        </div>
    </div>
</div>
