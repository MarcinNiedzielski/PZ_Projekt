@model PZ_Projekt.Models.Order

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="DeliveryMethod"></label>
        <select asp-for="DeliveryMethod" class="form-control">
            <option value="Pickup">Odbiór w sklepie</option>
            <option value="Courier">Kurier za pobraniem</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <h3>Items</h3>
    <ul>
        @foreach (var item in Model.OrderItems)
        {
            <li>@item.Item.Name - @item.Quantity x @item.Item.Price.ToString("C") = @(item.Quantity * item.Item.Price).ToString("C")</li>
        }
    </ul>

    <button type="submit" class="btn btn-primary">Submit Order</button>
</form>
