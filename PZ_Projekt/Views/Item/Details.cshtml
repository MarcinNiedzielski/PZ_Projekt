@model PZ_Projekt.Models.Item

@{
    ViewData["Title"] = "Szczegóły";
    bool isAdmin = User.IsInRole("Administrator");
}

<h1>Szczegóły</h1>

<div>
    <h4>Szczegóły produktu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>Nazwa:</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <strong>Opis:</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            <strong>Cena:</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            <strong>Kategoria:</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            <strong>Zdjęcie:</strong>
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" />
        </dd>
    </dl>
</div>

<!-- Dodaj do koszyka -->
<div>
    <form asp-action="AddToCart" asp-controller="Cart" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Dodaj do koszyka</button>
    </form>
</div>

@if (isAdmin)
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> |
        <a asp-action="Index">Powrót do Listy</a>
    </div>
}
