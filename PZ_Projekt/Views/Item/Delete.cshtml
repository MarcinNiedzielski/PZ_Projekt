@model PZ_Projekt.Models.Item

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>

<h3>Czy na pewno chcesz usunąć ten produkt?</h3>
<div>
    @if (Model != null)
    {
        <dl class="row">
            <dt class="col-sm-2">
                <strong>Nazwa:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                <strong>Opis:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                <strong>Cena:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                <strong>Kategoria:</strong>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt class="col-sm-2">
                <strong>Zdjęcie:</strong>
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Usuń" class="btn btn-danger" /> |
            <a asp-action="Index">Powrót do Listy</a>
        </form>
    }
    else
    {
        <p>Produkt nie został znaleziony.</p>
    }
</div>
